    <!-- PLATFORM SELECTION -->

    <gap:platform name="ios" />


        
    <!-- GENERAL PREFERENCES -->
        
    <preference name="phonegap-version" value="3.7.0" />
    <preference name="orientation" value="default" />
    <!-- remove the upper bar on iOS and Android
         set to false to fix keyboard overlaying 
         text input field issue-->
    <preference name="fullscreen" value="false" /> 
        
    <!-- iOS PREFERENCES -->
    
    <preference name="target-device" value="universal" />
    <preference name="prerendered-icon" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="false" />

    <preference name="webviewbounce" value="false" />
    <preference name="stay-in-webview" value="false" />
    <preference name="show-splash-screen-spinner" value="false" />
    <!-- if set to false, the splash screen must be hidden using a JavaScript API -->
    <preference name="auto-hide-splash-screen" value="true" /> 
        
    <!-- ANDROID PREFERENCES -->
        
    <preference name="android-minSdkVersion" value="7" /> <!-- minimum Android 2.1 -->
    <!-- <preference name="android-maxSdkVersion" value="19" /> maximum Android 4.4 -->
    <preference name="android-targetSdkVersion" value="19" /> <!-- targeting Android 4.4 -->
    <preference name="android-installLocation" value="auto" />
    <preference name="android-windowSoftInputMode" value="stateHidden|adjustResize" />
    <preference name="SplashScreenDelay" value="10000" />

    <preference name="load-url-timeout" value="20000" />
        
